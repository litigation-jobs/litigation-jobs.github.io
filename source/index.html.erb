    </script>
  </head>

  <body>
    <a id="fork-me" href="javascript:void(0)" data-toggle="modal" data-target="#new-wrapper">Add a new job</a>

    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-md-4 sidebar">
          <div class="row headline">
            <h1>Litigation Jobs</h1>
            <h2>
              A collection of <a href="http://litigation.nyc" target="_blank">NYC litigation</a> jobs
            </h2>

            <p class="bio">
              Curated by <a href="http://curtis.com/sitecontent.cfm?pageid=8&itemid=353">Nicole Mazanitis</a> & <a href="https://github.com/alexgorski"> Alex Gorski</a>
            </p>
            <p class="bio">
              Designed by <a href="http://tiffany-young.com">Tiffany Young</a> & <a href="https://github.com/alexgorski">Alex Gorski</a>
            </p>
          </div>

          <div class="row filters">
            <div class="filter-group filter-institutions">
              <h4 class="filter-group-title">Filter By Institution</h4>
              <table>
                <tr>
                  <td>Big Law</td>
                  <td>Mid Sized</td>
                  <td>Boutique</td>
                </tr>
                <tr>
                  <td>Corporate Counsel</td>
                  <td>Non-Profit</td>
                  <td>Government</td>
                </tr>
              </table>
            </div>
            <div class="filter-group filter-tags">
              <h4 class="filter-group-title">Filter By Tag</h4>
              <table>
                <% tags.each_slice(3).each do |tag_group| %>
                  <tr>
                    <% tag_group.each do |tag| %>
                      <td><%= tag %></td>
                    <% end %>
                  </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-md-8 col-md-offset-4 main">
          <% categories.each_with_index do |category,index| %>
            <div class="row category-info">
              <div class="col-md-12">
                <h2><%= category["name"] %></h2>
              </div>
            </div>
            <div class="row wrappers-list">
              <% halves = sort_by_downloads(category["wrappers"]).each_slice( (category["wrappers"].size/2.0).round ).to_a %>
              <% halves.each_with_index do |wrappers, col_index| %>
                <div class="col-md-6 wrappers-column wrappers-column-<%= col_index %>">
                <% wrappers.each_with_index do |wrapper, index| %>
                  <%= partial(:wrapper, locals: { wrapper: wrapper }) %>
                <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div> <!-- /container -->

    <div class="modal fade" id="new-wrapper" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Adding a Job</h4>
          </div>
          <div class="modal-body">
            <ol>
              <li>Fork the <a href="https://github.com/litigation/jobs" target="_blank">jobs</a> repo</li>
              <li>Run <code>bundle install</code></li>
              <li>Edit <a href="https://github.com/litigation/jobs/master/data.json" target="_blank">data.json</a> to include your job(s)</li>
              <li>Preview your changes by running <code>middleman</code> and <code>rake open</code></li>
              <li>Submit a pull request</li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" ></script>
    <script type="text/javascript">
      window.tags = JSON.parse('<%= tags.to_json %>');
    </script>
    <script src="assets/bootstrap/js/modal.js" ></script>
    <script src="assets/js/app.js" ></script>
  </body>
</html>
